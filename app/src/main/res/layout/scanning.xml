<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_scanning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/list_device_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/button_box"
        android:divider="@drawable/border_white"
        android:dividerHeight="2dp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00ffffff"
        android:visibility="gone" />

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/button_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/button_scanning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:background="@drawable/main_button_green_ring"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/start_scan"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1.0"
                android:text="@string/start_scan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true" >
            </Button>

            <Button
                android:id="@+id/stop_scan"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1.0"
                android:text="@string/start_stop"
                android:textSize="18sp"
                android:textStyle="bold"
                android:singleLine="true" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>