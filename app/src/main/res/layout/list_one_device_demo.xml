<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no_label"
            style="@style/ListLabelStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="10.0"
            android:background="@drawable/border_white"
            android:text="@string/demo_number_label" />

        <TextView
            android:id="@+id/no_digits"
            style="@style/ListTextStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="10.0"
            android:background="@drawable/border_white"
            android:hint="@string/demo_number_text_hint" />

        <TextView
            android:id="@+id/name_label"
            style="@style/ListLabelStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="20.0"
            android:background="@drawable/border_white"
            android:text="@string/demo_name_label" />

        <TextView
            android:id="@+id/name"
            style="@style/ListTextStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="60.0"
            android:background="@drawable/border_white"
            android:hint="@string/demo_name_text_hint"
            android:textColorHint="@color/bluescan_gray_med_lt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mac_label"
            style="@style/ListLabelStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="15.0"
            android:background="@drawable/border_white"
            android:text="@string/demo_mac_label" />

        <TextView
            android:id="@+id/mac_addr"
            style="@style/ListTextStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="50.0"
            android:background="@drawable/border_white"
            android:hint="@string/demo_mac_text_hint"
            android:textColorHint="@color/bluescan_gray_med_lt" />

        <TextView
            android:id="@+id/rssi_label"
            style="@style/ListLabelStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="20.0"
            android:background="@drawable/border_white"
            android:text="@string/demo_power_label" />

        <TextView
            android:id="@+id/rssi"
            style="@style/ListTextStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="15.0"
            android:background="@drawable/border_white"
            android:hint="@string/demo_power_text_hint" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company_label"
            style="@style/ListLabelStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="20.0"
            android:background="@drawable/border_white"
            android:text="@string/demo_company_label" />

        <TextView
            android:id="@+id/company_name"
            style="@style/ListTextStyle"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="80.0"
            android:background="@drawable/border_white"
            android:hint="@string/demo_company_text_hint"
            android:textColorHint="@color/bluescan_gray_med_lt" />

    </LinearLayout>


</LinearLayout>